<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/rbKolay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
         android:layout_weight="0.2"
         android:paddingLeft="15dp"
        android:background="@drawable/shape"
        android:button="@android:color/transparent"
        android:onClick="btnKolay"

        android:text="KOLAY"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/rbOrta"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/rbKolay"
         android:paddingLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_weight="0.2"
        android:background="@drawable/gorsel"
        android:button="@android:color/transparent"
        android:onClick="btnOrta"
        android:text="ORTA"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/rbZor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/rbOrta"
        android:layout_marginTop="30dp"
         android:paddingLeft="15dp"
        android:layout_weight="0.2"
        android:background="@drawable/hakkinda"
        android:button="@android:color/transparent"
        android:onClick="btnZor"
        android:text="ZOR"
        android:textColor="#ffffff" />

</LinearLayout>


</RelativeLayout>
