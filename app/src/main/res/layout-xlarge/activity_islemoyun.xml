<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/matsecimarka"
    android:id="@+id/rlislemoyun"
    tools:context="com.dicle.dicle.hafiza_oyunu.islemoyun">

    <LinearLayout
        android:id="@+id/llIslem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvDogruSayisi"
        android:layout_marginTop="97dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSayiBir"
            android:layout_width="0dp"

            android:layout_height="match_parent"

            android:layout_marginLeft="5dp"
            android:layout_weight="0.28"
            android:background="@android:color/transparent"
            android:fontFamily="casual"

            android:text="--"
            android:textColor="@android:color/background_light"
            android:textSize="@android:dimen/notification_large_icon_height" />

        <Button
            android:id="@+id/tvIslemType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.12"
            android:background="@android:color/transparent"
            android:text="-"
            android:textColor="@android:color/background_light"
            android:textSize="@android:dimen/notification_large_icon_height" />

        <Button
            android:id="@+id/btnSayiIki"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="0.33"
            android:background="@android:color/transparent"
            android:text="--"
            android:textColor="@android:color/background_light"
            android:textSize="@android:dimen/notification_large_icon_height" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvCevap"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/imgButtonYanlis"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:onClick="imgBtnYanlisCevap"
            app:srcCompat="@mipmap/yalnis" />

        <ImageView
            android:id="@+id/imgButtonDogru"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:onClick="imgBtndogruCevap"
            app:srcCompat="@mipmap/dogru" />
    </LinearLayout>

    <Button
        android:id="@+id/tvCevap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:background="@android:color/transparent"
        android:text="--"
        android:textColor="@android:color/background_light"
        android:textSize="@android:dimen/notification_large_icon_height"
        android:layout_below="@+id/llIslem"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
             android:text="Kalan Süre="

            android:textColor="@android:color/background_light" />

        <TextView
            android:id="@+id/tvSayac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="---"
            android:textColor="@android:color/background_light" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/llIslem"
            android:text="Doğru Sayıs="
            android:layout_marginLeft="160dp"
            android:textColor="@android:color/background_light" />

        <TextView
            android:id="@+id/tvDogruSayisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="0"
            android:layout_marginRight="3dp"
            android:textColor="@android:color/background_light" />


    </LinearLayout>


</RelativeLayout>
